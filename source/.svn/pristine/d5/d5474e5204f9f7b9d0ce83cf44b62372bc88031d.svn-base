	}
	for (double trueNPElog = log10(1); trueNPElog < log10(maxNPE); trueNPElog +=0.1) {
		if (trueNPElog < mMaxNPE) {
			double trueNPE = pow(10,trueNPElog);
			double value = sqrt((Nnsb + Nadd) + pow(ENF, 2) * trueNPE + pow(sigma2 * trueNPE, 2)) / trueNPE;
